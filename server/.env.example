PORT=5000
NODE_ENV=development
MONGODB_URI=mongodb+srv://username:password@cluster.example.mongodb.net/invoice?retryWrites=true&w=majority

# Stripe Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

